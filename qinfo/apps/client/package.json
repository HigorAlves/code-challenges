{
	"name": "@novac/client",
	"version": "2.1.0",
	"private": false,
	"authors": "Higor Alves <higorhaalves@gmail.com>, Cleber Schiavon <cleberschiavon@outlook.com>",
	"license": "MIT",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "jest -o --silent",
		"test:watch": "jest -o --watch --silent",
		"test:coverage": "jest -u --ci --silent --coverage",
		"test:ci": "jest -u --ci --silent --verbose --passWithNoTests",
		"serve:coverage": "open http://localhost:5000/ && serve coverage/lcov-report",
		"prettier": "npx prettier --write src/**/*.{ts,tsx,json}",
		"lint": "tsc --noEmit && eslint --fix --ext ts,tsx .",
		"storybook": "start-storybook -s ./public -p 6006",
		"build-storybook": "build-storybook -s ./public",
		"release": "standard-version",
		"release:major": "yarn run release --release-as major --no-verify",
		"release:minor": "yarn run release --release-as minor --no-verify",
		"release:patch": "yarn run release --release-as patch --no-verify",
		"release:alpha": "yarn run release --prerelease alpha --no-verify",
		"release:beta": "yarn run release --prerelease beta --no-verify"
	},
	"dependencies": {
		"@types/styled-components": "^5.1.10",
		"axios": "^0.21.1",
		"js-cookie": "^2.2.1",
		"next": "12.1.0",
		"next-cookies": "^2.0.3",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-lottie": "^1.2.3",
		"react-styled-flexboxgrid": "^3.2.1",
		"styled-components": "^5.3.0",
		"twin.macro": "^2.4.2"
	},
	"resolutions": {
		"styled-components": "^5"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-conventional": "^12.1.1",
		"@types/axios": "^0.14.0",
		"@types/js-cookie": "^2.2.6",
		"@types/react": "17.0.8",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"autoprefixer": "^10.2.6",
		"commitlint": "^12.1.1",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-standard": "^5.0.0",
		"postcss": "^8.3.0",
		"prettier": "^2.2.1",
		"standard-version": "^9.2.0",
		"tailwindcss": "^2.1.4",
		"typescript": "4.3.2"
	}
}
